{
  "id": "@artifactId@-@version@",
  "name": "Manage reading room and its related access",
  "requires": [
    {
      "id": "service-points",
      "version": "3.3"
    }
  ],
  "provides": [
    {
      "id": "reading-room",
      "version": "1.0",
      "handlers": [
        {
          "methods": ["POST"],
          "pathPattern": "/reading-room",
          "permissionsRequired": [
            "reading-room.item.post"
          ],
          "modulePermissions": [
            "inventory-storage.service-points.collection.get"
          ]
        },
        {
          "methods": ["GET"],
          "pathPattern": "/reading-room",
          "permissionsRequired": [
            "reading-room.collection.get"
          ],
          "modulePermissions": []
        },
        {
          "methods": ["PUT"],
          "pathPattern": "/reading-room/{readingRoomId}",
          "permissionsRequired": [
            "reading-room.item.put"
          ],
          "modulePermissions": []
        },
        {
          "methods": ["DELETE"],
          "pathPattern": "/reading-room/{readingRoomId}",
          "permissionsRequired": [
            "reading-room.item.delete"
          ],
          "modulePermissions": []
        },
        {
          "methods": ["POST"],
          "pathPattern": "/reading-room/access-log",
          "permissionsRequired": [
            "reading-room.access-log.post"
          ],
          "modulePermissions": []
        }
      ]
    },
    {
      "id": "reading-room-patron-permission",
      "version": "1.0",
      "handlers": [
        {
          "methods": ["GET"],
          "pathPattern": "/reading-room-patron-permission/users/{userId}",
          "permissionsRequired": [
            "reading-room-patron-permission.item.get"
          ],
          "modulePermissions": []
        },
        {
          "methods": ["PUT"],
          "pathPattern": "/reading-room-patron-permission/users/{userId}",
          "permissionsRequired": [
            "reading-room-patron-permission.item.put"
          ],
          "modulePermissions": []
        }
      ]
    },
    {
      "id": "_tenant",
      "version": "2.0",
      "interfaceType": "system",
      "handlers": [
        {
          "methods": ["POST"],
          "pathPattern": "/_/tenant"
        },
        {
          "methods": ["GET", "DELETE"],
          "pathPattern": "/_/tenant/{id}"
        }
      ]
    }
  ],
  "permissionSets" : [],
  "launchDescriptor": {
    "dockerImage": "@artifactId@:@version@",
    "dockerPull": false,
    "dockerArgs": {
      "HostConfig": {
        "Memory": 357913941,
        "PortBindings": { "8081/tcp": [ { "HostPort": "%p" } ] }
      }
    },
    "env": [
      { "name": "JAVA_OPTIONS",
        "value": "-XX:MaxRAMPercentage=66.0"
      },
      { "name": "DB_HOST", "value": "postgres" },
      { "name": "DB_PORT", "value": "5432" },
      { "name": "DB_USERNAME", "value": "folio_admin" },
      { "name": "DB_PASSWORD", "value": "folio_admin" },
      { "name": "DB_DATABASE", "value": "okapi_modules" },
      { "name": "DB_QUERYTIMEOUT", "value": "60000" },
      { "name": "DB_CHARSET", "value": "UTF-8" },
      { "name": "DB_MAXPOOLSIZE", "value": "5" }
    ]
  }
}
