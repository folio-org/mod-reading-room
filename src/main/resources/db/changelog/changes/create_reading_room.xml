<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

  <!-- Create reading room table -->
  <changeSet id="createTableReadingRoom" author="vignesh">
    <createTable tableName="reading_room">
      <column name="id" type="UUID">
        <constraints primaryKey="true" primaryKeyName="pk_readingroom_id"/>
      </column>
      <column name="title" type="text">
        <constraints unique="true" nullable="false"/>
      </column>
      <column name="public" type="boolean">
        <constraints nullable="false"/>
      </column>
      <column name="created_by" type="uuid"/>
      <column name="created_date" type="timestamp without time zone" defaultValueComputed="now()">
        <constraints nullable="false"/>
      </column>
      <column name="updated_by" type="uuid"/>
      <column name="updated_date" type="timestamp without time zone"/>
    </createTable>
  </changeSet>

</databaseChangeLog>
